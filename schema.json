{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LawAT/RisEx/RisEn ''LawDoc'' JSON Markup Format Schema",
  "type": "array", "minItems": 1, "unevaluatedItems": false,
  "prefixItems": [{ "type": "string", "pattern": "^(RisEnDoc|LawDoc) " }],
  "items": { "anyOf": [
    { "$ref": "#/$defs/Meta" },
    { "$ref": "#/$defs/Par" }
  ]},
  "$defs": {
    "Meta": {
      "type": "array", "minItems": 1, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Meta " }],
      "items": { "type": "string" }
    },
    "Par": {
      "type": "array", "minItems": 1, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Par " }],
      "items": { "anyOf": [
        { "$ref": "#/$defs/Head" },
        { "$ref": "#/$defs/Title" },
        { "$ref": "#/$defs/Content" },
        { "$ref": "#/$defs/SubHdr" }
      ]}
    },

    "Head": {
      "type": "array", "minItems": 2, "unevaluatedItems": false,
      "prefixItems": [
        { "type": "string", "pattern": "^Head( |$)" }
      ],
      "items": { "$ref": "#/$defs/TextContent" }
    },
    "Title": {
      "type": "array", "minItems": 2, "unevaluatedItems": false,
      "prefixItems": [
        { "type": "string", "pattern": "^Title( |$)" }
      ],
      "items": { "$ref": "#/$defs/TextContent" }
    },
    "SubHdr": {
      "type": "array", "minItems": 2, "unevaluatedItems": false,
      "prefixItems": [
        { "type": "string", "pattern": "^SubHdr( |$)" }
      ],
      "items": { "$ref": "#/$defs/TextContent" }
    },

    "Content": { "anyOf": [
      { "$ref": "#/$defs/Break" },
      { "$ref": "#/$defs/Text" },
      { "$ref": "#/$defs/List" },
      { "$ref": "#/$defs/Media" }
    ]},

    "Break": {
      "type": "array", "minItems": 1, "maxItems": 1, "unevaluatedItems": false,
      "items": { "pattern": "^Break$" }
    },

    "Text": {
      "type": "array", "minItems": 2, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Text( |$)" }],
      "items": { "$ref": "#/$defs/TextContent" }
    },
    "TextContent": { "anyOf": [
      { "type": "string" },
      { "$ref": "#/$defs/Anm" }
    ]},
    "Anm": {
      "type": "array", "minItems": 2, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Anm$" }],
      "items": { "type": "string" }
    },

    "List": {
      "type": "array", "minItems": 1, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^List( |$)" }],
      "items": { "anyOf": [
        { "$ref": "#/$defs/Item" },
        { "$ref": "#/$defs/Text" }
      ]}
    },
    "Item": {
      "type": "array", "minItems": 1, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Item( |$)" }],
      "items": { "$ref": "#/$defs/Content" }
    },

    "Media": {
      "type": "array", "minItems": 1, "unevaluatedItems": false,
      "prefixItems": [{ "type": "string", "pattern": "^Media$" }],
      "items": { "anyOf": [
        { "$ref": "#/$defs/Text" },
        { "$ref": "#/$defs/Img" }
      ]}
    },
    "Img": {
      "type": "array", "minItems": 2, "maxItems": 2, "unevaluatedItems": false,
      "prefixItems": [
        { "type": "string", "pattern": "^Img( |$)" },
        { "type": "string" }
      ]
    }
  }
}
